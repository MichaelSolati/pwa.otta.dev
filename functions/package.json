  "engines": {
    "node": "12"
  },
  "main": "dist/index.js",
  "dependencies": {
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.13.1"
  },
  "devDependencies": {
    "typescript": "^4.0.3",
    "firebase-functions-test": "^0.2.3"
  },
  "private": true
}
